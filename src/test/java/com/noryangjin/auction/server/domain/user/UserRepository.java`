```java
package com.nyadong.noryangjin.user.domain;

import org.junit.jupiter.api.DisplayName;
import org.junit.jupiter.api.Test;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.test.autoconfigure.orm.jpa.DataJpaTest;

import static org.assertj.core.api.Assertions.assertThat;

@DataJpaTest
class UserRepositoryTest {

    @Autowired
    private UserRepository userRepository;

    @Test
    @DisplayName("UserRepository는 JpaRepository를 상속하여 기본 CRUD 기능을 제공한다")
    void userRepositoryExtendsJpaRepository() {
        // Given: 새로운 User 엔티티 생성
        User user = new User(
            "testuser",
            "test@example.com",
            "password123",
            "010-1234-5678",
            UserRole.BUYER
        );

        // When: JpaRepository의 save 메서드를 사용하여 저장
        User savedUser = userRepository.save(user);

        // Then: 저장된 User를 조회할 수 있어야 함
        assertThat(savedUser.getId()).isNotNull();
        assertThat(userRepository.findById(savedUser.getId())).isPresent();
    }
}
```
