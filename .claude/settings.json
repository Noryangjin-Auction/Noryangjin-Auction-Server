{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'if [ -f ./validate.sh ] && ! ./validate.sh >/dev/null 2>&1; then echo "❌ Cannot modify files: ./validate.sh is currently failing. Fix existing issues first." >&2; exit 2; fi'",
            "timeout": 60
          }
        ]
      }
    ]
  }
}